`timescale 1ns / 1ps

module dec7seg(
   input  [3:0] X,
   output [6:0] segments
);

   assign segments = ~(              // Note the inversion
            X == 4'h0 ? 7'b0111111      
          : X == 4'h1 ? 7'b0000110
          : X == 4'h2 ? 7'b1011011
          : X == 4'h3 ? 7'b1001111
          : X == 4'h4 ? 7'b1100110 
          : X == 4'h5 ? 7'b1101101
          : X == 4'h6 ? 7'b1111101
          : X == 4'h7 ? 7'b0000111
          : X == 4'h8 ? 7'b1111111
          : X == 4'h9 ? 7'b1101111
          : 7'b0000000 );            // To catch an X that doesn't match any of the above

endmodule
